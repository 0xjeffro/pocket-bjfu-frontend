/* pages/kongjiaoshi/kongjiaoshi.wxss */
.select-view {
    line-height: 50px;
    text-align: center;
  }
.select-text {
    font-size: 50px;
}
.indicator {
    height: 50px; 
    background-color: #f7f7f73D;
    border-radius: 0px;
}
  
.content-card {
    display: flex;
    flex-direction: column;
    background-color: #fff;
    background: rgba(255, 255, 255, 1);
    box-shadow: 0px -4rpx 16rpx 0px rgba(148, 163, 178, 0.05);
    border-radius: 20rpx 20rpx 0px 0px;
    border-bottom: 20rpx solid #f7f7f7;
}
.row {
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding: 0rpx 0;
  box-sizing: border-box;
}

.cj-row {
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 0rpx 0;
  box-sizing: border-box;
}

.row-banner {
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  box-sizing: border-box;
}

.card{
  width: 100%;
  height: 300rpx;
  background: rgb(255, 255, 255);
  border-radius: 10rpx;
  box-shadow: 2px 2px 2px 1px #f3f3f3;
}

.desc-text {
  font-size: 26rpx;
  letter-spacing: 1px;
  line-height: 26rpx;
  color: #666;
}

.score-text {
  font-size: 50rpx;
  line-height: 90rpx;
  font-weight: 500;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}
.text-length {
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  width: 80%;
}

.col {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-start;
  padding: 0;
  box-sizing: border-box;
}
  
  
    
    
  