/* pages/gongneng/gongneng.wxss */
.row {
    height: 100%;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    padding: 25rpx 0;
    box-sizing: border-box;
}

.row-banner {
    height: 100%;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: flex-start;
    box-sizing: border-box;
}

.col {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: flex-start;
    padding: 0;
    box-sizing: border-box;
}

.icon-text-col {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding-top: 20rpx;
}

.icon-text {
    font-size: 16rpx;
    color: #515151;
    line-height: 30rpx;
    font-weight: 900;
}

.card{
    width: 100%;
    height: 300rpx;
    background: rgb(255, 255, 255);
    border-radius: 36rpx;
    box-shadow: 2px 2px 2px 1px #f3f3f3;
}

.card-sm{
    width: 100%;
    height: 300rpx;
    background: rgb(255, 255, 255);
    border-radius: 24rpx;
    box-shadow: 2px 2px 2px 1px #f3f3f3;
}
.light-block {
    background-color: #5abe64;
    width: 12.36rpx;
    height: 20rpx;
}

.light {
    background-color: #5abe64;
    width: 20rpx;
    height: 20rpx;
    border-radius: 10rpx;
    opacity: 0.3;
     /* IE10、Firefox and Opera，IE9以及更早的版本不支持 */
     animation-name: breath;                         /* 动画名称 */
     animation-duration: 4s;                         /* 动画时长 */
     animation-timing-function: ease-in-out;         /* 动画速度曲线：以低速开始和结束 */
     animation-iteration-count: infinite;            /* 播放次数：无限 */
  
     /* Safari and Chrome */
     -webkit-animation-name: breath;                 /* 动画名称 */
     -webkit-animation-duration: 4s;                 /* 动画时长 */
     -webkit-animation-timing-function: ease-in-out; /* 动画速度曲线：以低速开始和结束 */
     -webkit-animation-iteration-count: infinite;    /* 播放次数：无限 */
}
@keyframes breath {
    from { opacity: 0.3; }                          /* 动画开始时的不透明度 */
    5%  { opacity:   1; }                          /* 动画5% 时的不透明度 */
    90%  { opacity:   1; }                          /* 动画90% 时的不透明度 */
    to   { opacity: 0.3; }                          /* 动画结束时的不透明度 */    
}
 
@-webkit-keyframes breath {
    from { opacity: 0.3; }                          /* 动画开始时的不透明度 */
    5%  { opacity:   1; }                          /* 动画5% 时的不透明度 */
    90%  { opacity:   1; }                          /* 动画90% 时的不透明度 */
    to   { opacity: 0.3; }                          /* 动画结束时的不透明度 */
}
.hover-style {
    opacity: 1;
    background: #fafafa;
}
  
