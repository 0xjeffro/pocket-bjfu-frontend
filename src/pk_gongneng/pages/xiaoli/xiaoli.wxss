/* pages/xiaoli/xiaoli.wxss */
.row {
    height: 100%;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    padding: 25rpx 0;
    box-sizing: border-box;
}
.row-banner {
    height: 100%;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: flex-start;
    box-sizing: border-box;
}
.row-image {
    height: 100%;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
}
.card{
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background: #f7f7f7;
}
.light-block {
    background-color: #5abe64;
    width: 12.36rpx;
    height: 18.54rpx;
}

.pic {
    margin: 2rem 50rem 0rem 0rem;
    width: 730rpx;
    height: 100%;
}

.tip {
    color: #cccccc;
    font-size: 12px;
    margin-top: 4px;
}