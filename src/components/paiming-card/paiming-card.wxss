/* pages/kongjiaoshi/kongjiaoshi.wxss */
.select-view {
    line-height: 50px;
    text-align: center;
  }
.select-text {
    font-size: 50px;
}
.indicator {
    height: 50px; 
    background-color: #f7f7f73D;
    border-radius: 0px;
}
  
.row {
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding: 0rpx 0;
  box-sizing: border-box;
}


.row-banner {
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  box-sizing: border-box;
}

.card{
  width: 100%;
  height: 300rpx;
  background: rgb(255, 255, 255);
  border-radius: 10rpx;
  box-shadow: 2px 2px 2px 1px #f3f3f3;
}

.table {
  border:1px solid #dadada;
  border-right: 0;
  border-bottom: 0;
  width: 98%;
}
.tr {
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.th,.td {
  padding: 4px;
  border-bottom: 1px solid #dadada;
  border-right: 1px solid #dadada;
  text-align: center;
  width:100%
}
.th {
  font-weight: 400;
  font-size: 18rpx;
  background-color: #dadada
}

.td {
  font-weight: 400;
  font-size: 18rpx;
}
