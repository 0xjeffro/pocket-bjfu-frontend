/* pages/sunnyrun/sunnyrun.wxss */
.row {
    height: 100%;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    padding: 20rpx 0;
    box-sizing: border-box;
}

.row-banner {
    height: 100%;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: flex-start;
    box-sizing: border-box;
}
.col {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: flex-start;
    padding: 0;
    box-sizing: border-box;
}
.card{
    width: 100%;
    height: 300rpx;
    background: rgb(255, 255, 255);
    border-radius: 10rpx;
    box-shadow: 2px 2px 2px 1px #f3f3f3;
}

.light-block {
    background-color: #fff;
    width: 20rpx;
    height: 20rpx;
    border-radius: 50%;
    border: 2px solid #5abe64;
}

.text-label {
    margin-left: 80rpx;
    line-height: 80rpx;
    font-size: 27rpx;
    font-weight: 500;
    width: 190rpx;
}

.text-content {
    margin-left: 50rpx;
    line-height: 80rpx;
    font-size: 27rpx;
    letter-spacing: 0px;
    font-weight: 600;
}
