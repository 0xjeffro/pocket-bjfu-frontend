/* pages/kongjiaoshi/kongjiaoshi.wxss */
.select-view {
  line-height: 50px;
  text-align: center;
}
.select-text {
  font-size: 50px;
}
.indicator {
  height: 50px; 
  background-color: #f7f7f73D;
  border-radius: 0px;
}

.content-card {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px -4rpx 16rpx 0px rgba(148, 163, 178, 0.05);
  border-radius: 20rpx 20rpx 0px 0px;
  border-bottom: 20rpx solid #f7f7f7;
}

.card{
  background: rgb(255, 255, 255);
  border-radius: 0rpx;
  height: 100%;
  width: 90%;
  padding: 0rpx 0;
}

.row {
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding: 0rpx 0;
  box-sizing: border-box;
}

  
  
