/* components/kcb-card/kcb-card.wxss */
@import "../../static/css/animate.wxss";

.row {
    height: 100%;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    padding: 0rpx 0;
    box-sizing: border-box;
}

.col {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: flex-start;
    padding: 0;
    box-sizing: border-box;
}

.kcmc-font {
    color: #555;
    font-size: 28rpx;
    font-weight: bolder;
    font-family:Arial, Helvetica, sans-serif;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    word-break: break-all;
}

.time-text {
    color: #666;
    font-weight: 300;
}