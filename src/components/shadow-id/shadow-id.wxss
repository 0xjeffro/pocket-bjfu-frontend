/* components/shadow-id/shadow-id.wxss */
.shadow {
    width:100%;
    height:100%;
    position:fixed;
    left:0;
    top:0;
    z-index:99999;
    background-color:#000;
    opacity:0.002;
    pointer-events: none;
}

.watermark {
    font-weight: light;
    font-size: 40rpx;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    margin-left: 25rpx;
    color: rgb(255, 255, 255);
    transform: rotate(-45deg);
    -webkit-transform: rotate(-45deg);
}
